    console.log(`ğŸ“… Created cron expression: ${cronExpression} for date: ${date.toLocaleString('en-US')}`);
    console.log(`â° Time difference: ${Math.round(timeDiff / (1000 * 60))} minutes from now`);
    
    return cronExpression;
  }

