  // Create content hash for duplicate detection
  createContentHash(ad) {
    const crypto = require('crypto');
    const content = `${ad.title || ''}|${ad.content || ''}|${ad.linkUrl || ''}`;
    return crypto.createHash('md5').update(content).digest('hex');
  }

